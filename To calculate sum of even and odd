// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int i,n, a, even=0, odd=0, even_sum=0, odd_sum=0;
    printf("\n enter n numbers");
    scanf ("%d",&n);
    printf ("\n n=%d",n);
    for(i=1;i<=n;i++){
        printf("\n enter numbers%d:",i);
        scanf ("%d",&a);
        printf ("\n a=%d",a);
        if(a%2==0){
            even_sum=even_sum+a;
            even=even+1;
        }
        else{
            odd_sum=odd_sum+a;
            odd=odd+1;
        }
    }
    printf("\n even_sum=%d",even_sum);
    printf ("\n odd_sum=%d",odd_sum);
    printf ("\n even_count=%d",even);
    printf ("\n odd_count=%d",odd);
    return 0;
}
