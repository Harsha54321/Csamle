// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int x,i,n,even_sum=0,odd_sum=0, even_count=0, odd_count=0;
    printf("\n enter n value");
    scanf ("%d",&n);
    printf ("\n n=%d",n);
    for (i=1;i<=n;i++){
        printf ("\n enter any number");
        scanf ("%d",&x);
        printf ("\n x value is%d",x);
        printf ("\n i=%d",i);
        if(x%2==0){
            printf ("\n even number=%d",x);
            even_sum=even_sum+x;
            printf ("\n even_sum=%d",even_sum);
        }
        else{
            printf ("\n odd number=%d",x);
            odd_sum=odd_sum+x;
            printf ("\n odd_sum=%d",odd_sum);
        }
    }
    printf ("\n total even_sum=even_sum%d",even_sum);
    printf ("\n total odd_sum=odd_sum%d",odd_sum);
    
    return 0;
}
