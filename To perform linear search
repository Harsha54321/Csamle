// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here
    int a[100],i, n, x, ctr=0;
    printf("enter how many elements you want to store in an array");
    scanf ("%d",&n);
    printf ("\nenter %d values in an array",n);
    for (i=0;i<n;i++){
        printf ("\nentera[%d]value",i);
        scanf ("%d",&a[i]);
    }
    printf ("\nenter the element you want to search");
    scanf ("%d",&x);
    printf ("\nsearch %d value",x);
    for (i=0;i<n;i++){
        if(a[i]==x){
            printf ("\nelement found at location",i);
            ctr++;
        }
    }
    if(ctr==0)
        printf ("\nelement is not found");
        
    
    return 0;
}
